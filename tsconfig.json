{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": "src",
        "strict": true,
        "paths": {
            "@/*": ["*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "isolatedModules": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["src"]
}
